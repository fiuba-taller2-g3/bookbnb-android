<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bkbnbTitle">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbNormalTitle" parent="bkbnbTitle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="bkbnbSubtitle">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbDescription">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bkbnbTextInputField" parent="bkbnbSubtitle">
        <item name="android:background">@drawable/text_input_field_shape</item>
        <item name="android:paddingStart">@dimen/bkbnb10dp</item>
        <item name="android:paddingEnd">@dimen/bkbnb10dp</item>
        <item name="android:paddingTop">@dimen/bkbnb12dp</item>
        <item name="android:paddingBottom">@dimen/bkbnb12dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_text_input_field_color</item>
    </style>

    <style name="bkbnbLabelInputField" parent="bkbnbSubtitle" />

    <style name="bkbnbButton">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bkbnbBorderedButton" parent="bkbnbButton">
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbHomeLoginButton">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bkbnbValidationTextInputField" parent="bkbnbDescription">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="bkbnbDescriptionTextInputField" parent="bkbnbDescription">
        <item name="android:textColor">@color/colorDescription</item>
    </style>

    <style name="bkbnbRadioButtonInputField" parent="bkbnbSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/bkbnb12dp</item>
        <item name="android:paddingBottom">@dimen/bkbnb12dp</item>
        <item name="android:paddingStart">@dimen/bkbnb4dp</item>
    </style>

    <style name="bkbnbTextTitleDialog">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbTextButtonDialog">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bkbnbCancelTextButtonDialog" parent="bkbnbTextButtonDialog">
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbAcceptTextButtonDialog" parent="bkbnbTextButtonDialog">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="bkbnbStayPostTitle" parent="bkbnbTitle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="bkbnbLargeTitle" parent="bkbnbTitle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="bkbnbSmallTitle" parent="bkbnbTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bkbnbTitleProfileMenu" >
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDescription</item>
    </style>

    <style name="bkbnbOptionProfileMenu" parent="bkbnbSubtitle" >
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bkbnbRegisterText" parent="bkbnbSubtitle">
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="bkbnbFacebookLoginButton" parent="bkbnbButton">
        <item name="android:background">@drawable/facebook_button_ripple</item>
        <item name="android:layout_marginTop">@dimen/bkbnb20dp</item>
        <item name="android:layout_marginBottom">@dimen/bkbnb20dp</item>
        <item name="android:paddingTop">@dimen/bkbnb12dp</item>
        <item name="android:paddingBottom">@dimen/bkbnb14dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="bkbnbDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bkbnb1dp</item>
        <item name="android:background">@color/colorBackgroundInputFieldDisabled</item>
    </style>

    <style name="bkbnbDividerWithMarginTop" parent="bkbnbDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bkbnb1dp</item>
        <item name="android:background">@color/colorBackgroundInputFieldDisabled</item>
        <item name="android:layout_marginTop">@dimen/bkbnb14dp</item>
    </style>

    <style name="bkbnbPublishViewDivider" parent="bkbnbDivider">
        <item name="android:layout_marginTop">@dimen/bkbnb20dp</item>
    </style>

    <style name="bkbnbContextMenuTitleDialog" parent="bkbnbTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bkbnbContextMenuTitleItem" parent="bkbnbTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bkbnbStayTypePublishViewLabel" parent="bkbnbTitle">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="bkbnbHostNamePublishViewLabel" parent="bkbnbTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bkbnbAddPhotoLabel" parent="bkbnbTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAddPhotoText</item>
    </style>

    <style name="bkbnbXButton" parent="bkbnbSubtitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorDescription</item>
    </style>

    <style name="bkbnbHomeTitle" parent="bkbnbNormalTitle">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="bkbnbHomeSubtitle" parent="bkbnbSubtitle">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="bkbnbStayPostDescription" parent="bkbnbSubtitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bkbnbStayPostHorizontalMargins">
        <item name="android:layout_marginStart">16sp</item>
        <item name="android:layout_marginEnd">16sp</item>
    </style>

</resources>