<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Title styles -->
    <style name="bkbnbTitle">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbSubtitle">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbTextInputField" parent="bkbnbSubtitle">
        <item name="android:background">@drawable/text_input_field_shape</item>
        <item name="android:paddingStart">@dimen/bkbnb10dp</item>
        <item name="android:paddingEnd">@dimen/bkbnb10dp</item>
        <item name="android:paddingTop">@dimen/bkbnb12dp</item>
        <item name="android:paddingBottom">@dimen/bkbnb12dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_text_input_field_color</item>
    </style>

    <style name="bkbnbLabelInputField" parent="bkbnbSubtitle" />

    <style name="bkbnbButton">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bkbnbValidationTextInputField">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="bkbnbDescriptionTextInputField">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbRadioButtonInputField" parent="bkbnbSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:buttonTint">@color/colorRed</item>
        <item name="android:paddingTop">@dimen/bkbnb12dp</item>
        <item name="android:paddingBottom">@dimen/bkbnb12dp</item>
        <item name="android:paddingStart">@dimen/bkbnb4dp</item>
    </style>

    <style name="bkbnbTextTitleDialog">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bkbnbTextButtonDialog">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bkbnbCancelTextButtonDialog" parent="bkbnbTextButtonDialog">
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="bkbnbAcceptTextButtonDialog" parent="bkbnbTextButtonDialog">
        <item name="android:textColor">@color/colorRed</item>
    </style>

</resources>