<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/form_scroll_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/bkbnb24dp"
        android:paddingEnd="@dimen/bkbnb24dp"
        android:paddingBottom="@dimen/bkbnb64dp">

        <include
            android:id="@+id/header_container"
            layout="@layout/bookbnb_form_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/input_fields_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/bkbnb40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_container" />

        <RelativeLayout
            android:id="@+id/form_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bkbnb20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/bkbnb_form_title"
            app:layout_constraintTop_toBottomOf="@+id/input_fields_container">

            <include
                layout="@layout/bookbnb_button"
                android:elevation="1dp" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="@dimen/bkbnb24dp"
                android:layout_height="@dimen/bkbnb24dp"
                style="?android:attr/progressBarStyleSmall"
                android:indeterminateTint="@color/colorWhite"
                android:indeterminateTintMode="src_in"
                android:indeterminate="true"
                android:elevation="2dp"
                android:visibility="gone"
                android:layout_alignBottom="@+id/button"
                android:layout_alignTop="@+id/button"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/additional_text"
            style="@style/bkbnbSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/bkbnb28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_button_container"
            tools:visibility="visible"
            tools:text="¿Olvidaste tu contraseña?"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>