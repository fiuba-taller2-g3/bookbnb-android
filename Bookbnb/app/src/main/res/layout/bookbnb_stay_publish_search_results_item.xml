<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bkbnb8dp"
    android:background="@drawable/publish_view_item_shape"
    android:padding="@dimen/bkbnb16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgPostListHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stay_title"
        style="@style/bkbnbSmallTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bkbnb8dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/image"
        tools:text="Título" />

    <TextView
        android:id="@+id/stay_description"
        style="@style/bkbnbStayPostDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/bkbnb4dp"
        app:layout_constraintEnd_toEndOf="@+id/stay_title"
        app:layout_constraintStart_toStartOf="@+id/stay_title"
        app:layout_constraintTop_toBottomOf="@id/stay_title"
        tools:text="Descripción" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bkbnb12dp"
        app:layout_constraintTop_toBottomOf="@+id/stay_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/price"
            style="@style/bkbnbSmallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$17" />

        <TextView
            style="@style/bkbnbStayPostDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bkbnb4dp"
            android:layout_marginEnd="@dimen/bkbnb12dp"
            android:layout_weight="1"
            android:text="@string/stay_post_per_night_text" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>