<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/bkbnb10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/imgWidth"
        android:layout_height="@dimen/imgHeight" />

    <TextView
        android:id="@+id/text_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/bkbnbContextMenuTitleItem"
        android:layout_marginStart="@dimen/bkbnb20dp"
        android:layout_marginEnd="@dimen/bkbnb20dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        tools:text="Imagen 1"/>

    <TextView
        android:id="@+id/delete_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBedDistributionEditText"
        android:layout_gravity="center"
        style="@style/bkbnbOptionProfileMenu"
        android:text="@string/publish_remove_image_button_label"/>

</LinearLayout>