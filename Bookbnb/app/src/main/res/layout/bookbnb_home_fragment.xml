<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/bkbnb24dp"
    android:background="@drawable/scr_home"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edit_text"
            style="@style/bkbnbTextInputField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/home_search_hint"
            android:saveEnabled="false" />

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="@dimen/bkbnb44dp"
            android:layout_height="@dimen/bkbnb44dp"
            android:layout_marginStart="@dimen/bkbnb10dp"
            android:padding="@dimen/bkbnb8dp"
            android:src="@drawable/ic_search"
            app:tint="@color/colorWhite" />

    </LinearLayout>

    <TextView
        android:id="@+id/bkbnb_form_title"
        style="@style/bkbnbHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bkbnb40dp"
        android:text="@string/home_search_title" />

    <TextView
        android:id="@+id/bkbnb_form_subtitle"
        style="@style/bkbnbHomeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bkbnb8dp"
        android:text="@string/home_search_subtitle" />

</LinearLayout>