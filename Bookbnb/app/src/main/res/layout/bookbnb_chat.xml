<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="chatViewModel" type="com.fiuba.bookbnb.ui.fragments.chat.ChatViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/bkbnb8dp"
            android:clipToPadding="false"
            app:layoutManager="LinearLayoutManager"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/header_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/header_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bkbnb2dp"
            android:background="@color/colorBackgroundInputFieldDisabled"
            android:layout_marginTop="@dimen/bkbnb18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/msg_chat_container" />

        <LinearLayout
            android:id="@+id/msg_chat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/bkbnb16dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/messageEditText"
                android:hint="@string/chat_message_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/bkbnb8dp"
                android:text="@={chatViewModel.messageText}"/>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:layout_gravity="center_vertical"
                style="@style/bkbnbButton"
                android:enabled="@{!chatViewModel.messageText.empty}"
                android:onClick="@{() -> chatViewModel.onSendClick()}"
                android:text="@string/chat_send_msg"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>