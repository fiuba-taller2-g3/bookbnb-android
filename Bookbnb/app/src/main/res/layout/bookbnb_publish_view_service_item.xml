<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.LinearLayout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/service_name"
        style="@style/bkbnbSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/bkbnb18dp"
        tools:text="Elementos básicos" />

    <TextView
        android:id="@+id/service_description"
        style="@style/bkbnbDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bkbnb4dp"
        tools:text="Toallas, sábanas, jabón, papel higiénico y almohadas" />

</merge>