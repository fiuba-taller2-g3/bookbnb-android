<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="chatItem"
            type="com.fiuba.bookbnb.FirebaseChat" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/publish_view_item_shape"
        android:layout_marginHorizontal="@dimen/bkbnb8dp"
        android:layout_marginTop="@dimen/bkbnb8dp"
        android:padding="@dimen/bkbnb12dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/chat_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{chatItem.userAnfitrionName}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="#000000"
            app:layout_constrainedHeight="true"
            tools:text= "Jo"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/chat_list_item_type"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bkbnb4dp"
            app:layout_constraintTop_toBottomOf="@id/chat_list_item_name"
            app:layout_constrainedHeight="true"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            tools:text= "Anfitrion"/>

    </LinearLayout>

</layout>