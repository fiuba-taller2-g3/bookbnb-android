<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
<data>
        <import type="android.view.View"/>
        <variable
            name="chatsViewModel" type="com.fiuba.bookbnb.ui.fragments.chat.ChatsViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chats_container"
            android:name="com.fiuba.bookbnb.ui.fragments.chat.ChatsFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/bookbnb_chat_item" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/empty_chats_text"
            style="@style/bkbnbOptionProfileMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bkbnb22dp"
            android:visibility="@{chatsViewModel.chats.size() == 0 ? View.VISIBLE : View.GONE}"
            android:text="@string/no_hay_chats"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
