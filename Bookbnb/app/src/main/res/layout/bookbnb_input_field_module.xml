<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.LinearLayout"
    tools:orientation="vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bkbnb8dp"
        style="@style/bkbnbLabelInputField"
        tools:text="Label de prueba" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bkbnb6dp"
        android:layout_marginBottom="@dimen/bkbnb6dp" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bkbnb6dp"
        android:visibility="gone"
        style="@style/bkbnbLabelInputField"
        tools:text="Esto es un texto descriptivo de prueba"
        tools:visibility="visible" />
</merge>