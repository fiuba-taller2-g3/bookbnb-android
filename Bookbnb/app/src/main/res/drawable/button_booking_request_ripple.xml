<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorProfileButtonRipple"> <!-- Ripple color :: LIGHT GRAY -->

    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
            <corners android:radius="@dimen/buttonRadius"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="@dimen/inputFieldRadius" />
            <stroke
                android:width="@dimen/publishViewItemBorder"
                android:color="@color/colorBackgroundInputFieldDisabled"/>
        </shape>
    </item>
</ripple>